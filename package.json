{
  "name": "firebase-messages",
  "version": "0.0.0-alpha.0",
  "scripts": {
    "postinstall": "cd app && npm install && cd .. && cd functions && npm install",

    "start": "firebase serve",

    "pretest": "eslint --ignore-path .gitignore . ",
    "test": ":",

    "deploy": "firebase deploy"
  },
  "devDependencies": {
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "firebase-bolt": "^0.8.2",
    "firebase-tools": "^3.6.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "arrow-parens": ["error", "as-needed"],
      "comma-dangle": ["error", "always-multiline"],
      "import/no-dynamic-require": "off",
      "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
      "max-len": ["error", 240],
      "no-param-reassign": ["error", { "props": false }]
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RomansBermans/firebase-messages.git"
  },
  "bugs": {
    "url": "https://github.com/RomansBermans/firebase-messages/issues"
  },
  "homepage": "https://github.com/RomansBermans/firebase-messages",
  "author": "Romans Bermans <romans.bermans@gmail.com>",
  "license": "ISC"
}
